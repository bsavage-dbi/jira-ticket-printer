{
  "manifest_version": 2,

  "name": "Jira ticket printer",
  "description": "This extension generates a pdf from a provided JQL query that can be printed out and used for physical (Kanban/Scrum) boards",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
      "128": "icon.png",
      "16": "icon.png",
      "48": "icon.png"
   },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "permissions": [
   "activeTab",
   "storage",
   "https://*/*",
   "http://*/*"
  ]
}